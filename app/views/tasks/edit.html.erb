<div class="container my-5">
  <h1 class="mb-4">Modifier la tâche</h1>
  <%= form_with model: @task, url: task_path(@task), method: :patch, class: "needs-validation" do |f| %>
    <div class="mb-3">
      <%= f.label :title, 'Titre', class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Entrez le nouveau titre de la tâche" %>
    </div>
    <div class="mb-3">
      <%= f.label :details, 'Détails', class: "form-label" %>
      <%= f.text_area :details, class: "form-control", placeholder: "Entrez les nouveaux détails de la tâche" %>
    </div>
    <div class="form-check mb-3">
      <%= f.check_box :completed, class: "form-check-input" %>
      <%= f.label :completed, 'Terminée', class: "form-check-label" %>
    </div>
    <div class="d-flex justify-content-between">
      <%= f.submit 'Mettre à jour', class: "btn btn-primary" %>
      <%= link_to 'Retour à la liste', tasks_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
