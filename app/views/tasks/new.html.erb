<div class="container my-5">
  <h1 class="mb-4">Nouvelle tâche</h1>
  <%= form_with model: @task, url: tasks_path, class: "needs-validation" do |f| %>
    <div class="mb-3">
      <%= f.label :title, "Titre", class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Entrez le titre de la tâche" %>
    </div>
    <div class="mb-3">
      <%= f.label :details, "Détails", class: "form-label" %>
      <%= f.text_area :details, class: "form-control", placeholder: "Entrez les détails de la tâche" %>
    </div>
    <div class="d-flex justify-content-between">
      <%= f.submit 'Créer', class: "btn btn-primary" %>
      <%= link_to 'Retour à la liste', tasks_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
